[user]
	name = Keith Pitt
	email = me@keithpitt.com
[branch]
	autosetuprebase = always
[color]
	branch = auto
	diff = auto
	status = auto
[push]
        # Push current branch even if you've never pushed it before
	default = current
[color "diff"]
        # Color syntax: <foreground> <background>
        # So "normal red" is normal foreground, red background
        # BUT bold is a modifier, so "bold green red" means
        #   "bold green" foreground, red background
	whitespace = red reverse
	plain = white
	meta = cyan
	frag = magenta bold
	old = red
	new = green
	commit = yellow
[diff]
        # For Github-style word diffs
	wordRegex = [^[:space:]]
	compactionHeuristic = true
[github]
	user = keithpitt
[core]
	editor = /usr/local/bin/vim
	excludesfile = /Users/keithpitt/.gitignore_global
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
[pager]
	log = /usr/local/Cellar/git/2.13.2/share/git-core/contrib/diff-highlight/diff-highlight | less
	show = /usr/local/Cellar/git/2.13.2/share/git-core/contrib/diff-highlight/diff-highlight | less
	diff = /usr/local/Cellar/git/2.13.2/share/git-core/contrib/diff-highlight/diff-highlight | less
[interactive]
	diffFilter = /usr/local/Cellar/git/2.13.2/share/git-core/contrib/diff-highlight/diff-highlight
[credential]
	helper = osxkeychain
